{% extends 'base.html.twig' %}

{% block title %}Notification{% endblock %}

{% block body %}
    <h1>Notification</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ notification.id }}</td>
            </tr>
            <tr>
                <th>User_destination_id</th>
                <td>{{ notification.userDestinationId }}</td>
            </tr>
            <tr>
                <th>Date_notification</th>
                <td>{{ notification.dateNotification ? notification.dateNotification|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Accepted_by_user_id</th>
                <td>{{ notification.acceptedByUserId }}</td>
            </tr>
            <tr>
                <th>Accepted_by_user_destination_id</th>
                <td>{{ notification.acceptedByUserDestinationId ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_notification_index') }}">back to list</a>

    <a href="{{ path('app_notification_edit', {'id': notification.id}) }}">edit</a>

    {{ include('notification/_delete_form.html.twig') }}
{% endblock %}
